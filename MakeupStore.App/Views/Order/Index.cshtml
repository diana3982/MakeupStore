@model IEnumerable<MakeupStore.App.Models.Order>

@{
    ViewData["Title"] = "Index";
}

<div class="text-center">
    <h1 class="display-4"> Orders </h1>
    <p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OrderLocation.LocationName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OrderCustomer.FirstName)                         
                        @Html.DisplayNameFor(model => model.OrderCustomer.LastName)

                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OrderTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Total)
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OrderLocation.LocationName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OrderCustomer.FirstName)
                            @Html.DisplayFor(modelItem => item.OrderCustomer.LastName)

                        </td>
                        <td>
                            @Html.DisplayNameFor(modelItem => item.OrderTime)
                        </td>
                        <td>
                            @Html.DisplayNameFor(modelItem => item.Total)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </p>
</div>